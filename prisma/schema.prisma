generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  //entity
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firtsName String?
  lastName  String?

  @@map("Users")
  bookmarks Bookmark[]
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  link        String

  userId Int
  use   User @relation(fields: [userId], references: [id])

//the name of the colllection can be either bookmarks or bookmark
  @@map("bookmarks")
}
